@model TODOLists.Models.Tbl_User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2>Login</h2>

@using (Html.BeginForm("IsValidUser", "Account"))
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <!--Show details are saved successfully message-->
        <div class="col-lg-12">@ViewBag.Message</div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-2">@Html.LabelFor(a => a.Username)</div>
        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <input type="submit" value="Login" class="btn btn-primary" />
}