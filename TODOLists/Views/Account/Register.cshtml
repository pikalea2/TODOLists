@model TODOLists.Models.Tbl_User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<div>
    @using (Html.BeginForm("AddUser", "Account"))
    {
        @Html.AntiForgeryToken()
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.FirstName)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.LastName)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.EmailId)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.EmailId, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.EmailId, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Username)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            </div>
        </div><br />
        <input type="submit" value="Register" class="btn btn-primary" />
    }

</div>


